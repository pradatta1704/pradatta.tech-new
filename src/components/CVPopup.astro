<div id="cvPopup" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
  <div class="relative max-w-4xl w-full bg-white dark:bg-gray-800 rounded-lg shadow-xl">
    <button 
      onclick="closeCVPopup()"
      class="absolute top-4 right-4 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <iframe id="cvFrame" src="" class="w-full h-[80vh] rounded-lg" />
  </div>
</div>

<script is:inline>
  function openCVPopup(cvSrc) {
    const popup = document.getElementById('cvPopup');
    const frame = document.getElementById('cvFrame');
    if (popup && frame) {
      frame.src = cvSrc;
      popup.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeCVPopup() {
    const popup = document.getElementById('cvPopup');
    if (popup) {
      popup.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }
  }

  // Close on background click
  document.getElementById('cvPopup')?.addEventListener('click', (e) => {
    if (e.target.id === 'cvPopup') {
      closeCVPopup();
    }
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeCVPopup();
    }
  });
</script>