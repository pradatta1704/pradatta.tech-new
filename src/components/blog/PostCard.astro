---
const { post } = Astro.props;
const { title, description, pubDate, image } = post.data;
---

<article 
  class="bg-white dark:bg-gray-800 rounded-lg shadow-sm overflow-hidden"
  data-aos="fade-up"
>
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover"
    />
  )}
  <div class="p-6">
    <time datetime={pubDate.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
      {pubDate.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      })}
    </time>
    <h3 class="text-xl font-semibold mt-2 mb-3 text-gray-900 dark:text-white">
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">
      {description}
    </p>
    <a
      href={`/blog/${post.slug}`}
      class="text-accent hover:text-accent/90 font-medium transition-colors"
    >
      Read More â†’
    </a>
  </div>
</article>