---
const links = [
  { text: 'Blog', href: '/blog' },
  { text: 'Projects', href: '/projects' },
  { text: 'Tutorials', href: '/tutorials' },
  { text: 'Contact', href: '/contact' },
];
---

<div>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Links</h3>
  <ul class="space-y-2">
    {links.map(link => (
      <li>
        <a 
          href={link.href}
          class="text-gray-600 dark:text-gray-400 hover:text-accent dark:hover:text-accent transition-colors"
        >
          {link.text}
        </a>
      </li>
    ))}
  </ul>
</div>