---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import PostCard from '../../components/blog/PostCard.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog - Cloud Engineer Portfolio">
  <main class="min-h-screen py-32 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-center mb-12 dark:text-white" data-aos="fade-up">
        Blog Posts
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {sortedPosts.map(post => <PostCard post={post} />)}
      </div>
    </div>
  </main>
</Layout>