---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
---

<Layout title="Contact - Cloud Engineer Portfolio">
  <main class="min-h-screen py-32 bg-background-light dark:bg-background-dark">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-secondary/5 to-transparent"></div>
        <div class="relative">
          <h1 class="text-3xl font-bold text-center mb-2 dark:text-white" data-aos="fade-up">Get in Touch</h1>
          <p class="text-center text-gray-600 dark:text-gray-400 mb-8" data-aos="fade-up" data-aos-delay="100">
            Have a question or want to work together? Feel free to reach out!
          </p>
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>